#!/bin/sh

IMAGE_FILE=~/.screen_locked.png

lock() {
    scrot ${IMAGE_FILE}
    convert ${IMAGE_FILE} -scale 5% -scale 2000% ${IMAGE_FILE}
    i3lock -c 000000 -i ${IMAGE_FILE}
    rm ${IMAGE_FILE}
}

case "$1" in
    lock)
        lock
        sleep 15
        pgrep i3lock && xset dpms force off
        ;;
    logout)
        # i3-msg exit
        gnome-session-quit --logout
        ;;
    switch)
        lock
	dm-tool switch-to-greeter # lightdm
        ;;
    suspend)
        lock
        systemctl suspend
        ;;
    hibernate)
	lock
        systemctl hibernate
        ;;
    reboot)
        gnome-session-quit --reboot
        # systemctl reboot
        ;;
    shutdown)
        gnome-session-quit --power-off
        # systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|switch|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
