#!/bin/sh

IMAGE_FILE=~/.screen_locked.png

lock() {
    scrot ${IMAGE_FILE}
    convert ${IMAGE_FILE} -scale 5% -scale 2000% ${IMAGE_FILE}
    i3lock -c 000000 -i ${IMAGE_FILE}
    rm ${IMAGE_FILE}
    sleep 60; pgrep i3lock && xset dpms force off
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    switch)
        lock
	dm-tool switch-to-greeter # lightdm
        ;;
    suspend)
        lock
        systemctl suspend
        ;;
    hibernate)
	lock
        systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|switch|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
