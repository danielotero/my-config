#!/bin/sh

IMAGE_FILE=/dev/shm/.${USER}-screenlock

lock() {
    sleep 0.05 # Delay added to remove possible lock widgets
    scrot ${IMAGE_FILE}.bmp
    convert -scale 5% -scale 2000% ${IMAGE_FILE}.bmp ${IMAGE_FILE}.png
    rm ${IMAGE_FILE}.bmp
    xautolock -disable
    # Blocking command
    i3lock -c 000000 -i ${IMAGE_FILE}.png -n -e -d
    rm ${IMAGE_FILE}.png
    xautolock -enable
}

case "$1" in
    start)
        ;;
    lock)
        lock
        ;;
    logout)
        # i3-msg exit
        gnome-session-quit --logout --no-prompt
        ;;
    switch)
        lock &
	dm-tool switch-to-greeter # lightdm
        ;;
    suspend)
        systemctl suspend
        lock
        ;;
    hibernate)
	lock && systemctl hibernate
        ;;
    reboot)
        gnome-session-quit --reboot --no-prompt
        # systemctl reboot
        ;;
    shutdown)
        gnome-session-quit --power-off --no-prompt
        # systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|switch|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
